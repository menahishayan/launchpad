{
  "name": "launchpad",
  "displayName": "Launchpad CD",
  "description": "Build/deploy on Jenkins via VSCode",
  "version": "0.1.2",
  "author": {
    "name": "Menahi Shayan",
    "email": "menahi.shayan@gmail.com",
    "url": "https://www.github.com/menahishayan"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "publisher": "MenahiShayan",
  "repository": {
    "type": "git",
    "url": "https://github.com/menahishayan/launchpad.git"
  },
  "icon": "./images/icon.png",
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "launchpad.build",
        "title": "Start A New Build/Deploy"
      }
    ],
    "configuration": [
      {
        "title": "Jenkins API Key",
        "properties": {
          "launchpad.jenkinsKey": {
            "type": [
              "string",
              "null"
            ],
            "default": null,
            "description": "Specifies the API key to access the Jenkins server",
            "secret": true
          }
        }
      },
      {
        "title": "Jenkins Username",
        "properties": {
          "launchpad.jenkinsUsername": {
            "type": [
              "string",
              "null"
            ],
            "default": null,
            "description": "Specifies the username to access the Jenkins server",
            "secret": true
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.3",
    "typescript": "^5.1.3",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1"
  },
  "dependencies": {
    "jenkins-api": "^0.3.1"
  }
}
